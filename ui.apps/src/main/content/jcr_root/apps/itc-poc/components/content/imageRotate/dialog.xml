<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    cq:disableTargeting="{Boolean}true"
    jcr:primaryType="cq:Dialog"
    title="Text"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab1
            jcr:primaryType="cq:Widget"
            anchor="100%"
            title="Text"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <imageURL
                    jcr:primaryType="cq:Widget"
                    fieldDescription="Select The Image Base Path"
                    fieldLabel="Image URL"
                    name="./imageURL"
                    xtype="browsefield"/>
                <imageType
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Type of Image"
                    name="./imageType"
                    type="select"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <default
                            jcr:primaryType="nt:unstructured"
                            text="PNG"
                            value="png"/>
                        <textButton
                            jcr:primaryType="nt:unstructured"
                            text="JPG"
                            value="jpg"/>
                        <noofimages
                            jcr:primaryType="cq:Widget"
                            allowBlank="{Boolean}false"
                            fieldDescription="must be greater than Zero"
                            fieldLabel="Number of Images"
                            inputValue="true"
                            minValue="1"
                            name="./noofimages"
                            xtype="numberfield"/>
                    </options>
                </imageType>
                <noofimages
                    jcr:primaryType="cq:Widget"
                    allowBlank="{Boolean}false"
                    fieldDescription="must be greater than Zero"
                    fieldLabel="No. of Images"
                    inputValue="true"
                    minValue="1"
                    name="./noofImages"
                    xtype="numberfield"/>
            </items>
        </tab1>
    </items>
</jcr:root>
