<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Tab Content"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <tab1
            jcr:primaryType="cq:Widget"
            title="Tab Setting"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <sectionTitle
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Tab Title"
                    name="./sectionTitle"
                    xtype="textfield"/>
                <expanded
                    jcr:primaryType="cq:Widget"
                    defaultValue="false"
                    fieldDescription="Render on page load expanded"
                    fieldLabel="Expanded"
                    name="./expanded"
                    type="checkbox"
                    xtype="selection"/>
            </items>
        </tab1>
    </items>
</jcr:root>
